<Page x:Class="ToolRent.Views.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register" Background="#F8FAFC">
    <Grid Margin="32">
        <Grid MaxWidth="420" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="Create an account" FontSize="24" FontWeight="Bold" Margin="0,0,0,16"/>
                <TextBlock Text="Username"/>
                <TextBox x:Name="UsernameBox" Margin="0,4,0,12" Height="32"/>

                <TextBlock Text="Email"/>
                <TextBox x:Name="EmailBox" Margin="0,4,0,12" Height="32"/>

                <TextBlock Text="Password"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,4,0,12" Height="32"/>

                <TextBlock Text="Confirm password"/>
                <PasswordBox x:Name="ConfirmBox" Margin="0,4,0,16" Height="32"/>

                <TextBlock x:Name="ErrorText" Foreground="Tomato" Margin="0,0,0,12" Visibility="Collapsed"/>

                <Button Content="Register"
                        Click="Register_Click"
                        Height="40" Background="#0B80F4" Foreground="White" FontWeight="Bold"/>

                <Button Content="Already have an account? Sign in"
                        Click="GoToLogin_Click"
                        Margin="0,12,0,0"
                        Background="#E7EDF4" Foreground="#0D141C" Height="36"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>