<Window x:Class="ToolRent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolRent"
        mc:Ignorable="d"
        Title="ToolRent" Height="900" Width="1440" Background="#F8FAFC">

    <DockPanel LastChildFill="True">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="White" BorderBrush="#E7EDF4" BorderThickness="0,0,0,1" Padding="20,10">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,0,40,0">
                    <TextBlock Text="🛠️" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="ToolRent" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBox x:Name="SearchBox" Width="200" Height="30" VerticalAlignment="Center" Margin="0,0,20,0" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button Content="Register" Width="84" Height="30" Margin="5,0" Background="#0C7FF2" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Sign In" Width="84" Height="30" Margin="5,0" Background="#E7EDF4" Foreground="#0D141C" FontWeight="Bold"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Layout -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <StackPanel Background="WhiteSmoke" Grid.Column="0">
                <TextBlock Text="Category" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <ComboBox x:Name="CategoryFilterComboBox" SelectionChanged="Filter_Changed"/>
                <TextBlock Text="Ownership" FontSize="16" FontWeight="Bold" Margin="20,20,0,10"/>
                <ComboBox x:Name="UserFilterComboBox" SelectionChanged="Filter_Changed"/>
            </StackPanel>

            <!-- Content Area -->
            <StackPanel Grid.Column="1" Margin="20">
                <TextBlock Text="Tools" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <ItemsControl x:Name="ToolListPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" ItemWidth="200" ItemHeight="200"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border DockPanel.Dock="Bottom" Background="WhiteSmoke" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Help Center" Margin="10" Foreground="#49739c"/>
                    <TextBlock Text="Contact Info" Margin="10" Foreground="#49739c"/>
                    <TextBlock Text="Resources" Margin="10" Foreground="#49739c"/>
                </StackPanel>
                <TextBlock Text="@2024 ToolRent. All rights reserved." HorizontalAlignment="Center" Foreground="#49739c"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
