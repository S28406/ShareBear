<Window x:Class="PRO_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRO_"
        mc:Ignorable="d"
        Title="ToolRent" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar Filters -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Filter by Brand" FontWeight="Bold" Margin="0,0,0,5" />
            <ComboBox x:Name="BrandFilterComboBox" SelectionChanged="OnFilterChanged" Margin="0,0,0,10" />

            <TextBlock Text="Filter by Ownership" FontWeight="Bold" Margin="0,10,0,5" />
            <ComboBox x:Name="OwnershipFilterComboBox" SelectionChanged="OnFilterChanged" Margin="0,0,0,10" />
        </StackPanel>

        <!-- Tool List -->
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Text="Tools" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
            <ListBox x:Name="ToolsListBox" DisplayMemberPath="Name" Height="450" />
        </StackPanel>
    </Grid>
</Window>
