<Window x:Class="Pro.Client.Views.ReturnDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Return Tool" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8FAFC">

    <Border Background="White" BorderBrush="#E7EDF4" BorderThickness="1" CornerRadius="12" Padding="16" Margin="12">
        <Grid Width="520">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Return details" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                <TextBlock Text="Damage" Margin="0,0,0,6"/>
                <ComboBox x:Name="DamageBox" SelectedIndex="0" Height="32">
                    <ComboBoxItem Content="None"/>
                    <ComboBoxItem Content="Minor"/>
                    <ComboBoxItem Content="Major"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                <TextBlock Text="Condition notes" Margin="0,0,0,6"/>
                <TextBox x:Name="ConditionBox" Height="90" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Click="Cancel_Click"
                        Background="#E7EDF4" Foreground="#0D141C"
                        Padding="14,6" Margin="0,0,8,0"/>
                <Button Content="Submit Return" Click="Submit_Click"
                        Background="#0B80F4" Foreground="White"
                        Padding="14,6"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>