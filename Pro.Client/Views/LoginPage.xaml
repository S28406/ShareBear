<Page x:Class="Pro.Client.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login"
      Background="#0B1220"
      TextElement.FontFamily="Segoe UI"
      TextElement.FontSize="13"
      TextElement.Foreground="#E5E7EB">

    <Page.Resources>
        <SolidColorBrush x:Key="PanelBg" Color="#111B2E"/>
        <SolidColorBrush x:Key="CardBg" Color="#0F1A2E"/>
        <SolidColorBrush x:Key="BorderC" Color="#24314D"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Accent" Color="#F97316"/>

        <Style x:Key="FieldLabel" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderC}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type PasswordBox}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderC}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="#0B1220"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Background" Value="#17233A"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderC}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid Margin="32">
        <Border Background="{StaticResource PanelBg}"
                BorderBrush="{StaticResource BorderC}"
                BorderThickness="1"
                CornerRadius="16"
                Padding="22"
                MaxWidth="440"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">

            <StackPanel>
                <TextBlock Text="Sign in" FontSize="26" FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBlock Text="Welcome back to ShareBear"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="0,0,0,18"/>

                <TextBlock Text="Username or Email" Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="UserOrEmailBox" Margin="0,0,0,12"/>

                <TextBlock Text="Password" Style="{StaticResource FieldLabel}"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,16"/>

                <TextBlock x:Name="ErrorText"
                           Foreground="#FCA5A5"
                           Margin="0,0,0,12"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>

                <Button Content="Sign in"
                        Click="Login_Click"
                        Style="{StaticResource PrimaryButton}"/>

                <Button Content="Create an account"
                        Click="GoToRegister_Click"
                        Margin="0,12,0,0"
                        Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
