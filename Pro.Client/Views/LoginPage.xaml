<Page x:Class="Pro.Client.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login" Background="#F8FAFC">
    <Grid Margin="32">
        <Grid MaxWidth="420" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="Sign in" FontSize="24" FontWeight="Bold" Margin="0,0,0,16"/>
                <TextBlock Text="Username or Email"/>
                <TextBox x:Name="UserOrEmailBox" Margin="0,4,0,12" Height="32"/>

                <TextBlock Text="Password"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,4,0,16" Height="32"/>

                <TextBlock x:Name="ErrorText" Foreground="Tomato" Margin="0,0,0,12" Visibility="Collapsed"/>

                <Button Content="Sign in"
                        Click="Login_Click"
                        Height="40" Background="#0B80F4" Foreground="White" FontWeight="Bold"/>

                <Button Content="Create an account"
                        Click="GoToRegister_Click"
                        Margin="0,12,0,0"
                        Background="#E7EDF4" Foreground="#0D141C" Height="36"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>