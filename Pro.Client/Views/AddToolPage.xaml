<Page x:Class="Pro.Client.Views.AddToolPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F8FAFC">

    <ScrollViewer>
        <StackPanel Margin="24" Width="500">
            <TextBlock Text="Add Tool" FontSize="22" FontWeight="Bold" Margin="0,0,0,16"/>

            <TextBlock Text="Name"/>
            <TextBox x:Name="NameTextBox" Height="30" Margin="0,4,0,12"/>

            <TextBlock Text="Description"/>
            <TextBox x:Name="DescriptionTextBox" Height="80" AcceptsReturn="True" TextWrapping="Wrap"
                     Margin="0,4,0,12"/>

            <TextBlock Text="Price"/>
            <TextBox x:Name="PriceTextBox" Height="30" Margin="0,4,0,12"/>

            <TextBlock Text="Quantity"/>
            <TextBox x:Name="QuantityTextBox" Height="30" Margin="0,4,0,12"/>

            <TextBlock Text="Category"/>
            <ComboBox x:Name="CategoryComboBox" Height="30" Margin="0,4,0,12"/>
            
            <TextBlock Text="Location"/>
            <TextBox x:Name="LocationTextBox" Height="30" Margin="0,4,0,12"/>

            <TextBlock Text="Image file name (e.g. band_saw_machine.jpg)"/>
            <TextBox x:Name="ImageFileNameTextBox" Height="30" Margin="0,4,0,16"/>

            <Button Content="Create"
                    Height="36"
                    Background="#0B80F4" Foreground="White"
                    FontWeight="Bold"
                    Click="CreateButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>