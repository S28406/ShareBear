<Window x:Class="Pro.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToolRent" Height="900" Width="1440" Background="#F8FAFC">
    <DockPanel LastChildFill="True">
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="White" BorderBrush="#E7EDF4" BorderThickness="0,0,0,1" Padding="20,10">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,0,40,0">
                    <TextBlock Text="🛠️" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="ToolRent" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBox x:Name="SearchTextBox"
                         Width="200" Height="30"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"
                         HorizontalAlignment="Left"
                         KeyDown="SearchTextBox_KeyDown"/>
                <Button Content="Search"
                        Width="70" Height="30"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Click="Search_Click"
                        Background="#E7EDF4" Foreground="#0D141C" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button x:Name="AddProductBtn" Content="Add Product" Click="GoAddProduct_Click"
                            Width="110" Height="30" Margin="5,0"
                            Background="#0B80F4" Foreground="White" FontWeight="Bold"
                            Visibility="Collapsed"/>
                    <Button x:Name="MyToolsBtn" Content="My Tools" Click="GoMyTools_Click"
                            Width="90" Height="30" Margin="5,0"
                            Background="#E7EDF4" Foreground="#0D141C" FontWeight="Bold"
                            Visibility="Collapsed"/>

                    
                    <Button x:Name="RegisterBtn" Content="Register" Click="GoRegister_Click"
                            Width="84" Height="30" Margin="5,0"
                            Background="#0C7FF2" Foreground="White" FontWeight="Bold"/>

                    <Button x:Name="HistoryBtn" Content="History" Click="GoHistory_Click"
                            Width="100" Height="30" Margin="5,0"
                            Background="#E7EDF4" Foreground="#0D141C" FontWeight="Bold"
                            Visibility="Collapsed"/>

                    <Button x:Name="LoginBtn" Content="Sign In" Click="GoLogin_Click"
                            Width="84" Height="30" Margin="5,0"
                            Background="#E7EDF4" Foreground="#0D141C" FontWeight="Bold"/>

                    <Button x:Name="LogoutBtn" Content="Log out" Click="Logout_Click"
                            Width="84" Height="30" Margin="5,0"
                            Background="#E7EDF4" Foreground="#0D141C" FontWeight="Bold"
                            Visibility="Collapsed"/>
                    
                    <!-- <Button Content="Register" Click="GoRegister_Click" Width="84" Height="30" Margin="5,0" Background="#0C7FF2" Foreground="White" FontWeight="Bold"/> -->
                    <!-- <Button Content="History" Click="GoHistory_Click" Width="100" Height="30" Margin="5,0" -->
                    <!--         Background="#E7EDF4" Foreground="#0D141C" FontWeight="Bold"/> -->
                    <!-- <Button Content="Sign In" Click="GoLogin_Click" Width="84" Height="30" Margin="5,0" Background="#E7EDF4" Foreground="#0D141C" FontWeight="Bold"/> -->
                </StackPanel>
            </DockPanel>
        </Border>
        
        <Border DockPanel.Dock="Bottom" Background="WhiteSmoke" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Help Center" Margin="10" Foreground="#49739c"/>
                    <TextBlock Text="Contact Info" Margin="10" Foreground="#49739c"/>
                    <TextBlock Text="Resources" Margin="10" Foreground="#49739c"/>
                </StackPanel>
                <TextBlock Text="@2024 ToolRent. All rights reserved." HorizontalAlignment="Center" Foreground="#49739c"/>
            </StackPanel>
        </Border>
        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
        
    </DockPanel>
</Window>
