<Page x:Class="Pro.Client.Views.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register"
      Background="#0B1220"
      TextElement.FontFamily="Segoe UI"
      TextElement.FontSize="13"
      TextElement.Foreground="#E5E7EB">

    <Page.Resources>
        <SolidColorBrush x:Key="ShellBg" Color="#0B1220"/>
        <SolidColorBrush x:Key="PanelBg" Color="#111B2E"/>
        <SolidColorBrush x:Key="CardBg" Color="#0F1A2E"/>
        <SolidColorBrush x:Key="BorderC" Color="#24314D"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Accent" Color="#F97316"/>

        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#0F1A2E"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#0F1A2E"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#17233A"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#E5E7EB"/>

        <Style x:Key="Label" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,10,0,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderC}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type PasswordBox}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderC}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
        </Style>

        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Margin" Value="0,6,0,16"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="#0B1220"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="14,8"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderC}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="14,8"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource ShellBg}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="24" MaxWidth="980" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                    <Button x:Name="BackButton"
                            Click="BackButton_Click"
                            Style="{StaticResource SecondaryButton}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="⟵" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Back to tools"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Border Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        MaxWidth="520"
                        Padding="22"
                        CornerRadius="16"
                        Background="{StaticResource PanelBg}"
                        BorderBrush="{StaticResource BorderC}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Create an account" FontSize="24" FontWeight="Bold" Margin="0,0,0,4"/>
                        <TextBlock Text="Register to rent or list tools" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,12"/>

                        <TextBlock Text="Username" Style="{StaticResource Label}"/>
                        <TextBox x:Name="UsernameBox" Margin="0,0,0,6"/>

                        <TextBlock Text="Email" Style="{StaticResource Label}"/>
                        <TextBox x:Name="EmailBox" Margin="0,0,0,6"/>

                        <TextBlock Text="Password" Style="{StaticResource Label}"/>
                        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,6"/>

                        <TextBlock Text="Confirm password" Style="{StaticResource Label}"/>
                        <PasswordBox x:Name="ConfirmBox" Margin="0,0,0,6"/>

                        <CheckBox x:Name="SellerCheckBox" Content="Register as Seller"/>

                        <TextBlock x:Name="ErrorText"
                                   Foreground="#FCA5A5"
                                   Margin="0,0,0,12"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"/>

                        <Button Content="Register"
                                Click="Register_Click"
                                Style="{StaticResource PrimaryButton}"/>

                        <Button Content="Already have an account? Sign in"
                                Click="GoToLogin_Click"
                                Margin="0,10,0,0"
                                Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
