<Page x:Class="Pro.Client.Views.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register" Background="#F8FAFC">
    <Grid Background="#F8FAFC">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                    <Button x:Name="BackButton"
                            Click="BackButton_Click"
                            Padding="12,6"
                            Background="#E7EDF4" Foreground="#0D141C"
                            BorderBrush="#CEDBE9" BorderThickness="1"
                            FontWeight="Bold"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="⟵" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Back to tools"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <Border Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        MaxWidth="480"
                        Padding="24"
                        CornerRadius="12"
                        Background="White"
                        BorderBrush="#E7EDF4"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Create an account" FontSize="24" FontWeight="Bold" Margin="0,0,0,16"/>

                        <TextBlock Text="Username"/>
                        <TextBox x:Name="UsernameBox" Margin="0,4,0,12" Height="32"/>

                        <TextBlock Text="Email"/>
                        <TextBox x:Name="EmailBox" Margin="0,4,0,12" Height="32"/>

                        <TextBlock Text="Password"/>
                        <PasswordBox x:Name="PasswordBox" Margin="0,4,0,12" Height="32"/>

                        <TextBlock Text="Confirm password"/>
                        <PasswordBox x:Name="ConfirmBox" Margin="0,4,0,16" Height="32"/>
                        <CheckBox x:Name="SellerCheckBox" Content="Register as Seller" Margin="0,8,0,20"/>

                        <TextBlock x:Name="ErrorText"
                                   Foreground="Tomato"
                                   Margin="0,0,0,12"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"/>

                        <Button Content="Register"
                                Click="Register_Click"
                                Height="40"
                                Background="#0B80F4"
                                Foreground="White"
                                BorderBrush="#0B80F4"
                                FontWeight="Bold"
                                Cursor="Hand"/>

                        <Button Content="Already have an account? Sign in"
                                Click="GoToLogin_Click"
                                Margin="0,12,0,0"
                                Background="#E7EDF4"
                                Foreground="#0D141C"
                                Height="36"
                                BorderBrush="#CEDBE9"
                                Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
