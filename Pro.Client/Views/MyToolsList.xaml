<Page x:Class="Pro.Client.Views.MyToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MyToolsPage"
      Background="#0B1220"
      TextElement.FontFamily="Segoe UI"
      TextElement.FontSize="13"
      TextElement.Foreground="#E5E7EB">

    <Page.Resources>
        <SolidColorBrush x:Key="PanelBg" Color="#111B2E"/>
        <SolidColorBrush x:Key="CardBg" Color="#0F1A2E"/>
        <SolidColorBrush x:Key="BorderC" Color="#24314D"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Accent" Color="#F97316"/>

        <Style x:Key="SecondaryButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Background" Value="#17233A"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderC}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="#0B1220"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header bar -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBg}"
                BorderBrush="{StaticResource BorderC}"
                BorderThickness="1"
                CornerRadius="14"
                Padding="14"
                Margin="0,0,0,14">
            <DockPanel LastChildFill="True">

                <Button Content="← Back"
                        Click="BackButton_Click"
                        Style="{StaticResource SecondaryButton}"
                        Width="110"
                        DockPanel.Dock="Left"
                        Margin="0,0,10,0"/>

                <Button Content="Refresh"
                        Click="RefreshButton_Click"
                        Style="{StaticResource SecondaryButton}"
                        Width="110"
                        DockPanel.Dock="Right"
                        Margin="10,0,0,0"/>

                <StackPanel>
                    <TextBlock Text="My Tools" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Manage your listings"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,2,0,0"/>
                </StackPanel>

            </DockPanel>
        </Border>

        <!-- List container -->
        <Border Grid.Row="1"
                Background="#0E1627"
                BorderBrush="{StaticResource BorderC}"
                BorderThickness="1"
                CornerRadius="14"
                Padding="14">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ToolListPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
