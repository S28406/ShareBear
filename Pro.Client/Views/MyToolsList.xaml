<Page x:Class="Pro.Client.Views.MyToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MyToolsPage" Background="#F8FAFC">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <Button Content="← Back" Click="BackButton_Click"
                    Width="90" Height="30" Margin="0,0,10,0"
                    Background="#E7EDF4" Foreground="#0D141C" FontWeight="Bold"/>
            <TextBlock Text="My Tools" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Refresh" Click="RefreshButton_Click"
                    Width="90" Height="30" Margin="10,0,0,0"
                    Background="#E7EDF4" Foreground="#0D141C" FontWeight="Bold"
                    DockPanel.Dock="Right"/>
        </DockPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ToolListPanel">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>