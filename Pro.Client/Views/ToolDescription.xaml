<Page x:Class="Pro.Client.Views.ToolDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      x:Name="Root"
      Title="ToolDetailsPage"
      Background="#0B1220"
      TextElement.FontFamily="Segoe UI"
      TextElement.FontSize="13"
      TextElement.Foreground="#E5E7EB">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <SolidColorBrush x:Key="ShellBg" Color="#0B1220"/>
        <SolidColorBrush x:Key="PanelBg" Color="#111B2E"/>
        <SolidColorBrush x:Key="CardBg" Color="#0F1A2E"/>
        <SolidColorBrush x:Key="BorderC" Color="#24314D"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Accent" Color="#F97316"/>

        <Style x:Key="PrimaryButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="#0B1220"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderC}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Background" Value="#2A1520"/>
            <Setter Property="Foreground" Value="#FCA5A5"/>
            <Setter Property="BorderBrush" Value="#7F1D1D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24" MaxWidth="1100" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <Button x:Name="BackButton"
                        Click="BackButton_Click"
                        Style="{StaticResource SecondaryButton}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="⟵" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Back to tools"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Hero -->
            <Border Grid.Row="1"
                    Background="{StaticResource PanelBg}"
                    BorderBrush="{StaticResource BorderC}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="10">
                <Border CornerRadius="12" ClipToBounds="True">
                    <Image x:Name="HeroImage" Height="320" Stretch="UniformToFill"/>
                </Border>
            </Border>

            <!-- Header + actions -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="ToolName" FontSize="28" FontWeight="Bold" Foreground="#E5E7EB"/>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock x:Name="CategoryName" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Text="  •  " Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock x:Name="OwnerName" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock x:Name="PriceText"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#E5E7EB"
                               HorizontalAlignment="Right"/>
                    <Button Content="Rent Now"
                            Width="160"
                            Margin="0,10,0,0"
                            Style="{StaticResource PrimaryButton}"
                            Click="RentButtonClick"/>
                </StackPanel>
            </Grid>

            <!-- Body -->
            <Grid Grid.Row="3" Margin="0,18,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Description -->
                <Border Grid.Column="0"
                        Background="{StaticResource PanelBg}"
                        BorderBrush="{StaticResource BorderC}"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="16">
                    <StackPanel>
                        <TextBlock Text="Description" FontSize="16" FontWeight="Bold" Foreground="#E5E7EB"/>
                        <TextBlock x:Name="DescriptionText"
                                   TextWrapping="Wrap"
                                   Foreground="#E5E7EB"
                                   Opacity="0.92"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Reviews -->
                <Border Grid.Column="2"
                        Background="{StaticResource PanelBg}"
                        BorderBrush="{StaticResource BorderC}"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="16">
                    <StackPanel>
                        <DockPanel>
                            <TextBlock Text="Customer Reviews"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#E5E7EB"
                                       DockPanel.Dock="Left"/>
                            <Button Content="Leave a review"
                                    Width="160"
                                    DockPanel.Dock="Right"
                                    Style="{StaticResource SecondaryButton}"
                                    Click="LeaveReview_Click"/>
                        </DockPanel>

                        <ItemsControl x:Name="ReviewsList" Margin="0,12,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource CardBg}"
                                            BorderBrush="{StaticResource BorderC}"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="12"
                                            Margin="0,8,0,0">
                                        <StackPanel>
                                            <DockPanel>
                                                <TextBlock Text="{Binding User.Username}"
                                                           FontWeight="SemiBold"
                                                           Foreground="#E5E7EB"
                                                           DockPanel.Dock="Left"/>

                                                <Button Content="Delete"
                                                        DockPanel.Dock="Right"
                                                        Tag="{Binding Id}"
                                                        Click="DeleteReview_Click"
                                                        Style="{StaticResource DangerButton}"
                                                        Visibility="{Binding ElementName=Root, Path=IsAdmin, Converter={StaticResource BoolToVis}}"/>
                                            </DockPanel>

                                            <TextBlock Text="{Binding Rating, StringFormat=Rating: {0}/5}"
                                                       Foreground="{StaticResource Accent}"
                                                       Margin="0,6,0,0"/>

                                            <TextBlock Text="{Binding Description}"
                                                       TextWrapping="Wrap"
                                                       Foreground="#E5E7EB"
                                                       Opacity="0.92"
                                                       Margin="0,6,0,0"/>

                                            <TextBlock Text="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}"
                                                       Foreground="{StaticResource TextSecondary}"
                                                       FontSize="12"
                                                       Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
